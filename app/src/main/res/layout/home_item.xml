<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:layout_marginStart="13dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="13dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background0"
    android:backgroundTint="#ECECEC"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:foregroundTint="@color/materialBlueGrey"
    app:backgroundTint="@color/selector_homeclick_background">


    <ImageButton
        android:id="@+id/bDisLike"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/background1"
        android:backgroundTint="#ECECEC"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_nofavorite_24" />

    <ImageButton
        android:id="@+id/bLike"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/background1"
        android:backgroundTint="#ECECEC"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_favorite_24" />

    <ImageView
        android:id="@+id/imPro"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/background1"
        android:backgroundTint="#ECECEC"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bDisLike"
        app:srcCompat="@drawable/pro" />

    <ImageView
        android:id="@+id/imVerfication"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/background1"
        android:backgroundTint="#ECECEC"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imPro"
        app:srcCompat="@drawable/verfication" />

    <ImageView
        android:id="@+id/imLink"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/background1"
        android:backgroundTint="#ECECEC"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bDisLike"
        app:srcCompat="@drawable/baseline_insert_link_25" />

    <TextView
        android:id="@+id/tvWork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/allerta"
        android:foregroundGravity="right"
        android:gravity="start"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo_bhaijaan"
        android:foregroundGravity="right"
        android:gravity="start"
        android:text="200AZN"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvWork"
        app:layout_constraintTop_toBottomOf="@+id/tvWork" />

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amarante"
        android:foregroundGravity="right"
        android:gravity="start"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvPrice"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

    <TextView
        android:id="@+id/tvExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amarante"
        android:foregroundGravity="right"
        android:gravity="start"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvCity"
        app:layout_constraintTop_toBottomOf="@+id/tvCity" />

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amarante"
        android:foregroundGravity="right"
        android:gravity="start"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvExperience"
        app:layout_constraintTop_toBottomOf="@+id/tvExperience" />

    <com.google.android.material.button.MaterialButton

        android:id="@+id/button"
        style="@style/HomeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background1"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Позвонить"
        app:backgroundTint="@color/selector_homeclick_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:id="@+id/buttonConnect"
        style="@style/HomeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background1"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Откликнутся"
        app:backgroundTint="@color/selector_homeclick_background2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/averia_serif_libre_bold"
        android:foregroundGravity="right"
        android:gravity="start"
        android:text="TextView"
        android:textColor="#836200"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvData"
        app:layout_constraintTop_toBottomOf="@+id/tvData" />

    <TextView
        android:id="@+id/idElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="#10000"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>